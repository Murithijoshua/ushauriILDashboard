extends layout/base

block content

    #heading

      h1.text-center IL Clients Sync 

    #content
    
    //- Do it like this...You're already in JavaScript land after the -
    - var items = rows

      div

        script.

          $(document).ready(function() {
            $('#resultTable').DataTable({
              "order": [[ 0, "desc" ]],
              "lengthMenu": [[100, 250, 500, -1], [100, 250, 500, "All"]]
              });
          });

        p(class='navbar-text' value=test) 

        div.text-center
          form(method="POST", action="/clients")
              label(for='from') From  :
              input(type='date', name='start_date', id='start_date')
              label(for='to') To  :
              input(type='date', name='end_date', id='end_date')
              input(type='submit',name='submit',value='Submit', class='btn btn-primary').submit-button

        div

          table#resultTable.table.thead-light 
            thead 
              tr: th CCC Number
                  th Phone Number 
                  th Source 
                  th Enrollment Date
                  th ART Date 
                  th Processed 
                  th Date Processed 
                  th Logs 
            tbody 
              each item in items

                tr 
                  td=item.clinic_number
                  td=item.phone_no
                  td=item.sending_application
                  if item.art_date == 'Invalid date'
                    td=('Missing')
                  else
                    td=item.art_date
                  if item.enrollment_date == 'Invalid date'
                    td=('Missing')
                  else  
                    td=item.enrollment_date
                  td=item.processed
                  if item.date_processed == 'Invalid date'
                    td=('Missing')
                  else
                    td=item.date_processed
                  td=item.send_log




    
